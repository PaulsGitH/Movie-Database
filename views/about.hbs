{{> menu id="about"}}

<section class="ui center aligned middle aligned segment">
  
  <h2>About</h2>
  <p>Anime List app is a customizable application for adding and managing anime movies or series. Users have the flexibility to edit and update the content according to their preferences.</p>
  <div class="designers">
    {{#with info}}
    <h3>Designers and Location of App Development</h3>
    <div class="ui cards">
      <div class="card">
        <div class="content">
          <img class="center floated ui image" src="https://cdn.glitch.global/03a7b163-6898-4d40-b76d-9b071f01fb96/05b93ad37bd1bef36493fb4a6cdf435a.gif?v=1709489598815">
          <div class="header">
            {{creators.0.name}}
          </div>
          <div class="meta">
            {{creators.0.role}}
          </div>
          <div class="description">
            {{creators.0.description}}
          </div>
        </div>
      </div>
      <div class="card">
        <div class="content">
          <img class="right floated ui image" src="https://cdn.glitch.global/03a7b163-6898-4d40-b76d-9b071f01fb96/angryasuka.gif?v=1709489219358">
          <div class="header">
            {{creators.1.name}}
          </div>
          <div class="meta">
            {{creators.1.role}}
          </div>
          <div class="description">
            {{creators.1.description}}
          </div>
        </div>
      </div>
      <div class="card">
        <div class="content">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2442.852696270675!2d-7.141279423450729!3d52.246059171990645!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4842c41310dd4131%3A0x4042f0dcf13f7cfe!2sSouth%20East%20Technological%20University%20%7C%20Waterford!5e0!3m2!1sen!2sie!4v1709657349511!5m2!1sen!2sie"
            width="100%"
            height="145"
            frameborder="0"
            style="border:0"
            allowfullscreen>
          </iframe>
          <div style="margin-top: 25px;"></div>
          <div class="header">
            {{location}}
          </div>
          <div class="description">
            {{description}}
          </div>
        </div>
      </div>
    </div>
    <div class="ui equal width grid">
      <div class="column">
        <div class="ui statistics">
          <div class="statistic">
            <div class="value">
              <i class="film icon"></i> 
            </div>
            <div class="label">
              App Title: <br>
              {{appTitle}}
            </div>
          </div>
        </div>
      </div>
      <div class="column">
        <div class="ui statistics">
          <div class="statistic">
            <div class="value">
              <i class="code branch icon"></i> 
            </div>
            <div class="label">
              App Version: <br>
              Version {{version}}
            </div>
          </div>
        </div>
      </div>
      <div class="column">
        <div class="ui statistics">
          <div class="statistic">
            <div class="value">
              <i class="map pin icon"></i> 
            </div>
            <div class="label">
              Made in: <br>
              {{location}}
            </div>
          </div>
        </div>
      </div>
    </div>
    {{/with}}
  </div>
</section>

