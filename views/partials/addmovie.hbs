<form class="ui stacked segment form" action="/animelist/{{id}}/addmovie" method="POST">

  <div class="two fields">
    <div class="field">
      <label>Title</label>
      <input type="text" name="title" autofocus required title = "Please include a valid Title"
	  placeholder="Title">
    </div>
    <div class="field">
      <label>Director</label>
      <input type="text" name="director" required title = "Please include a valid Director"
	  placeholder="Director">
    </div>
    <div class="field">
    <label>Release Date</label>
      <input type="text" name="release_date" required title = "Please include a valid Release Date"
	  placeholder="Release_Date">
    </div>
    <div class="field">
      <label>Genre</label>
      <input type="text" name="genre" required title = "Please include a valid Genre"
	  placeholder="Genre">
    </div>
  </div>
  <button class="ui blue submit button">Add Movie</button>
</form>